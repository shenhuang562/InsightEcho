<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.InsightEcho.mapper.ArticleMapper">

    <resultMap id="BaseResultMap" type="com.example.InsightEcho.entity.Article">
        <id column="id" property="id" />
        <result column="title" property="title" />
        <result column="content" property="content" />
        <result column="author" property="author" />
        <!-- 其他字段映射 -->
    </resultMap>

    <select id="selectBackArticleCount" resultType="java.lang.Long" parameterType="com.example.InsightEcho.query.ArticleQuery">
        SELECT COUNT(id) FROM article
        <where>
            <!-- 根据查询条件动态生成 WHERE 子句 -->
            <if test="param.keyword != null">
                AND title LIKE CONCAT('%', #{param.keyword}, '%')
            </if>
            <!-- 其他条件 -->
        </where>
    </select>

    <select id="selectBackArticleList" resultType="java.lang.Integer" parameterType="com.example.InsightEcho.query.ArticleQuery">
        SELECT id FROM article
        <where>
            <!-- 根据查询条件动态生成 WHERE 子句 -->
            <if test="param.keyword != null">
                AND title LIKE CONCAT('%', #{param.keyword}, '%')
            </if>
            <!-- 其他条件 -->
        </where>
    </select>

    <select id="selectArticleInfoById" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        SELECT * FROM article WHERE id = #{articleId}
    </select>

    <select id="searchArticle" resultMap="BaseResultMap" parameterType="java.lang.String">
        SELECT * FROM article WHERE title LIKE CONCAT('%', #{keyword}, '%') OR content LIKE CONCAT('%', #{keyword}, '%')
    </select>

</mapper>
